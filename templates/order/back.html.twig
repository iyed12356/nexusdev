{% extends 'back/base.html.twig' %}

{% block title %}Order management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">Orders</h1>
            <p class="np-section-subtitle">Review and manage customer orders.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                {# Search Form #}
                <div class="np-card mb-4">
                    <div class="np-card__body">
                        <form method="get" class="row g-3">
                            <div class="col-md-8">
                                <input type="text" name="search" class="form-control" placeholder="Search order ID or user..." value="{{ app.request.query.get('search') }}">
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary w-100">Search</button>
                            </div>
                        </form>
                    </div>
                </div>

                <h2>Orders list</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>User</th>
                            <th>Total</th>
                            <th>Status</th>
                            <th>Created at</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for order in pagination %}
                        <tr>
                            <td>{{ order.id }}</td>
                            <td>{{ order.user.username }}</td>
                            <td>{{ order.total|number_format(2, '.', ' ') }} â‚¬</td>
                            <td>{{ order.status }}</td>
                            <td>{{ order.createdAt|date('Y-m-d H:i') }}</td>
                            <td style="white-space: nowrap;">
                                <a href="{{ path('app_order_back', {'id': order.id}) }}" class="btn btn-sm btn-primary">edit</a>
                                <form method="post" action="{{ path('app_order_delete', {'id': order.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this order?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ order.id) }}">
                                    <button class="btn btn-sm btn-danger">delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">No orders match your search.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                
                {# Pagination #}
                <div class="d-flex justify-content-center mt-3">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>

            <div class="np-back-layout-side">
                <div class="np-form-card np-animate-in-delayed">
                    <h2 class="np-section-title">
                        {% if editing %}
                            Edit order #{{ currentOrder.id }}
                        {% else %}
                            Create new order
                        {% endif %}
                    </h2>

                    {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-success">{% if editing %}Update{% else %}Save{% endif %}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
