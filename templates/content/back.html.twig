{% extends 'back/base.html.twig' %}

{% block title %}Content management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">Content management</h1>
            <p class="np-section-subtitle">Manage news and guides displayed on the platform.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                <h2>Contents list</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Type</th>
                            <th>Author</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for content in contents %}
                        <tr>
                            <td>{{ content.id }}</td>
                            <td>{{ content.title }}</td>
                            <td>{{ content.type }}</td>
                            <td>{{ content.author.username }}</td>
                            <td style="white-space: nowrap;">
                                <a href="{{ path('app_content_back', {'id': content.id}) }}" class="btn btn-sm btn-primary">edit</a>
                                <form method="post" action="{{ path('app_content_delete', {'id': content.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this content?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ content.id) }}">
                                    <button class="btn btn-sm btn-danger">delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no contents found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="np-back-layout-side">
                <div class="np-form-card np-animate-in-delayed">
                    <h2 class="np-section-title">
                        {% if editing %}
                            Edit content #{{ currentContent.id }}
                        {% else %}
                            Create new content
                        {% endif %}
                    </h2>

                    {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-success">{% if editing %}Update{% else %}Save{% endif %}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
