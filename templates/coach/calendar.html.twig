{% extends 'base.html.twig' %}

{% block title %}Coach Calendar{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .calendar-container {
            max-width: 900px;
            margin: 0 auto;
        }
        .calendar-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
        }
        .calendar-nav {
            display: flex;
            gap: 10px;
        }
        .calendar-grid {
            display: grid;
            grid-template-columns: repeat(7, 1fr);
            gap: 1px;
            background: rgba(255,255,255,0.1);
            border-radius: 12px;
            overflow: hidden;
        }
        .calendar-day-header {
            background: #1a1a2e;
            padding: 10px;
            text-align: center;
            font-weight: 600;
            font-size: 0.85rem;
            color: #94a3b8;
        }
        .calendar-day {
            background: #0f172a;
            min-height: 100px;
            padding: 8px;
            position: relative;
        }
        .calendar-day:hover {
            background: #1e293b;
        }
        .calendar-day-number {
            font-size: 0.9rem;
            font-weight: 600;
            margin-bottom: 5px;
        }
        .calendar-day.today .calendar-day-number {
            color: #3b82f6;
        }
        .calendar-session {
            background: #3b82f6;
            color: white;
            padding: 2px 6px;
            border-radius: 4px;
            font-size: 0.7rem;
            margin-bottom: 2px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        .calendar-session.completed {
            background: #10b981;
        }
        .calendar-session.cancelled {
            background: #ef4444;
        }
        .calendar-session.pending {
            background: #f59e0b;
        }
        .empty-day {
            background: #0a0f1a;
        }
    </style>
{% endblock %}

{% block body %}
<section class="np-section np-animate-in">
    <div class="calendar-header">
        <h2>{{ monthName }} {{ year }}</h2>
        <div class="calendar-nav">
            <a href="{{ path('app_coach_calendar', {'year': year, 'month': month - 1 < 1 ? 12 : month - 1}) }}" 
               class="btn btn-outline-secondary btn-sm">
                ← Previous
            </a>
            <a href="{{ path('app_coach_calendar', {'year': "now"|date('Y'), 'month': "now"|date('m')}) }}" 
               class="btn btn-outline-primary btn-sm">
                Today
            </a>
            <a href="{{ path('app_coach_calendar', {'year': year, 'month': month + 1 > 12 ? 1 : month + 1}) }}" 
               class="btn btn-outline-secondary btn-sm">
                Next →
            </a>
        </div>
    </div>

    <div class="calendar-container">
        <div class="calendar-grid">
            <div class="calendar-day-header">Sun</div>
            <div class="calendar-day-header">Mon</div>
            <div class="calendar-day-header">Tue</div>
            <div class="calendar-day-header">Wed</div>
            <div class="calendar-day-header">Thu</div>
            <div class="calendar-day-header">Fri</div>
            <div class="calendar-day-header">Sat</div>

            {# Empty cells before the first day #}
            {% for i in range(1, startDayOfWeek) %}
                <div class="calendar-day empty-day"></div>
            {% endfor %}

            {# Days of the month #}
            {% for day in range(1, daysInMonth) %}
                {% set currentDate = "%04d-%02d-%02d"|format(year, month, day) %}
                {% set isToday = ("now"|date('Y-m-d') == currentDate) %}
                
                <div class="calendar-day {{ isToday ? 'today' : '' }}">
                    <div class="calendar-day-number">{{ day }}</div>
                    
                    {% for session in sessions %}
                        {% set sessionDate = session.scheduledAt|date('Y-m-d') %}
                        {% if sessionDate == currentDate %}
                            <a href="{{ path('app_coach_session_detail', {'id': session.id}) }}" 
                               class="text-decoration-none">
                                <div class="calendar-session {{ session.status|lower }}">
                                    {{ session.scheduledAt|date('H:i') }} - {{ session.player.nickname }}
                                </div>
                            </a>
                        {% endif %}
                    {% endfor %}
                </div>
            {% endfor %}
        </div>
    </div>

    <div class="mt-4 d-flex gap-2 justify-content-center">
        <a href="{{ path('app_coach_back') }}" class="btn btn-primary">Dashboard</a>
        <a href="{{ path('app_coach_sessions') }}" class="btn btn-outline-secondary">Sessions List</a>
    </div>
</section>
{% endblock %}
