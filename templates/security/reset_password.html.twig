{% extends 'base.html.twig' %}

{% block title %}Reset password{% endblock %}

{% block body %}
    <section class="np-section np-auth-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Reset password</span>
            <h1 class="np-section-title">Choose a new password</h1>
            <p class="np-section-subtitle">
                Enter your new password below.
            </p>
        </div>

        {% for message in app.flashes('danger') %}
            <div class="alert alert-danger" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(resetForm, {'attr': {'class': 'np-form'}}) }}
            {{ form_row(resetForm.plainPassword) }}

            <button class="btn btn-primary w-100" type="submit">
                Reset password
            </button>
        {{ form_end(resetForm) }}

        <p class="np-form-footer">
            <a href="{{ path('app_login') }}">Back to login</a>
        </p>
    </section>
{% endblock %}
