{% extends 'base.html.twig' %}

{% block title %}Forgot password{% endblock %}

{% block body %}
    <section class="np-section np-auth-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Reset password</span>
            <h1 class="np-section-title">Forgot your password?</h1>
            <p class="np-section-subtitle">
                Enter your email address and we will send you a link to reset your password.
            </p>
        </div>

        {% for message in app.flashes('info') %}
            <div class="alert alert-info" role="alert">
                {{ message }}
            </div>
        {% endfor %}

        {{ form_start(requestForm, {'attr': {'class': 'np-form'}}) }}
            {{ form_row(requestForm.email) }}

            <button class="btn btn-primary w-100" type="submit">
                Send reset link
            </button>
        {{ form_end(requestForm) }}

        <p class="np-form-footer">
            Remember your password?
            <a href="{{ path('app_login') }}">Log in</a>
        </p>
    </section>
{% endblock %}
