{% extends 'base_player.html.twig' %}

{% block title %}Coaching History{% endblock %}

{% block body %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <div>
                <span class="np-section-kicker">Player Portal</span>
                <h1 class="np-section-title">Coaching History</h1>
                <p class="np-section-subtitle">All your coaching sessions and progress.</p>
            </div>
        </div>

        <div class="np-form-card np-animate-in-delayed">
            {% if sessions is empty %}
                <div class="text-center py-5">
                    <p class="text-muted mb-3">No coaching sessions yet.</p>
                    <a href="{{ path('front_coaching_session_index') }}" class="btn btn-primary">Book Your First Session</a>
                </div>
            {% else %}
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Date & Time</th>
                                <th>Coach</th>
                                <th>Status</th>
                                <th>Notes</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for session in sessions %}
                                <tr>
                                    <td>{{ session.scheduledAt|date('Y-m-d H:i') }}</td>
                                    <td>
                                        <div class="d-flex align-items-center gap-2">
                                            {% if session.coach.user.profilePicture %}
                                                <img src="{{ asset('uploads/' ~ session.coach.user.profilePicture) }}" alt="" class="rounded-circle" style="width: 24px; height: 24px; object-fit: cover;">
                                            {% endif %}
                                            <span>{{ session.coach.user.username|default('Unknown') }}</span>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="badge {% if session.status == 'COMPLETED' %}bg-success{% elseif session.status == 'CONFIRMED' %}bg-primary{% elseif session.status == 'CANCELLED' %}bg-danger{% else %}bg-warning text-dark{% endif %}">
                                            {{ session.status }}
                                        </span>
                                    </td>
                                    <td>
                                        {% if session.notes %}
                                            <span style="font-size: 0.85rem;">{{ session.notes }}</span>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% endif %}
        </div>
    </section>
{% endblock %}

