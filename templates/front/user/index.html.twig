{% extends 'base.html.twig' %}

{% block title %}Front - User list{% endblock %}

{% block body %}
    <h1>Users (Front)</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Email</th>
                <th>User type</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.userType }}</td>
                <td>{{ user.status }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no users found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
