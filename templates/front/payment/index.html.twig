{% extends 'base.html.twig' %}

{% block title %}Front - Payment list{% endblock %}

{% block body %}
    <h1>Payments (Front)</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Order</th>
                <th>Status</th>
                <th>Provider</th>
                <th>CreatedAt</th>
            </tr>
        </thead>
        <tbody>
        {% for payment in payments %}
            <tr>
                <td>{{ payment.id }}</td>
                <td>{{ payment.order ? payment.order.id : '' }}</td>
                <td>{{ payment.status }}</td>
                <td>{{ payment.provider }}</td>
                <td>{{ payment.createdAt ? payment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no payments found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
