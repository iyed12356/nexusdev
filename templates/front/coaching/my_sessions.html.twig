{% extends 'base.html.twig' %}

{% block title %}My Coaching Sessions{% endblock %}

{% block body %}
<div class="container" style="margin-top: 40px; margin-bottom: 40px;">
    <h1 class="mb-3">My Coaching Sessions</h1>

    {% if sessions is empty %}
        <p class="text-muted">You have no coaching sessions scheduled yet.</p>
    {% else %}
        <table class="table">
            <thead>
                <tr>
                    <th>Player</th>
                    <th>Scheduled at</th>
                    <th>Status</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
            {% for session in sessions %}
                <tr>
                    <td>{{ session.player.nickname }}</td>
                    <td>{{ session.scheduledAt|date('Y-m-d H:i') }}</td>
                    <td>{{ session.status }}</td>
                    <td>
                        {% if session.status == 'PENDING' %}
                            <form method="post" action="{{ path('front_coaching_confirm', {'id': session.id}) }}" style="display:inline">
                                <button class="btn btn-sm btn-success">Confirm</button>
                            </form>
                        {% endif %}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}
</div>
{% endblock %}

