{% extends 'back/base.html.twig' %}

{% block title %}Organizations management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">Organizations</h1>
            <p class="np-section-subtitle">Review and manage all organizations in the platform.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                {# Search Form #}
                <div class="np-card mb-4">
                    <div class="np-card__body">
                        <form method="get" class="row g-3">
                            <div class="col-md-8">
                                <input type="text" name="search" class="form-control" placeholder="Search organization name..." value="{{ app.request.query.get('search') }}">
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary w-100">Search</button>
                            </div>
                        </form>
                    </div>
                </div>

                <h2>Organizations list</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>
                                <a href="{{ path('app_organization_back', {'sort': 'id', 'direction': sort == 'id' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" style="color: inherit; text-decoration: none; border-bottom: 1px dashed currentColor; cursor: pointer;">
                                    ID {{ sort == 'id' ? (direction == 'ASC' ? '↑' : '↓') : '' }}
                                </a>
                            </th>
                            <th>
                                <a href="{{ path('app_organization_back', {'sort': 'name', 'direction': sort == 'name' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" style="color: inherit; text-decoration: none; border-bottom: 1px dashed currentColor; cursor: pointer;">
                                    Name {{ sort == 'name' ? (direction == 'ASC' ? '↑' : '↓') : '' }}
                                </a>
                            </th>
                            <th>Owner</th>
                            <th>
                                <a href="{{ path('app_organization_back', {'sort': 'isValidated', 'direction': sort == 'isValidated' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" style="color: inherit; text-decoration: none; border-bottom: 1px dashed currentColor; cursor: pointer;">
                                    Validated {{ sort == 'isValidated' ? (direction == 'ASC' ? '↑' : '↓') : '' }}
                                </a>
                            </th>
                            <th>
                                <a href="{{ path('app_organization_back', {'sort': 'createdAt', 'direction': sort == 'createdAt' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" style="color: inherit; text-decoration: none; border-bottom: 1px dashed currentColor; cursor: pointer;">
                                    Created at {{ sort == 'createdAt' ? (direction == 'ASC' ? '↑' : '↓') : '' }}
                                </a>
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for organization in pagination %}
                        <tr>
                            <td>{{ organization.id }}</td>
                            <td>{{ organization.name }}</td>
                            <td>{{ organization.owner ? organization.owner.username : '—' }}</td>
                            <td>
                                {% if organization.isValidated %}
                                    <span class="badge bg-success">Yes</span>
                                {% else %}
                                    <span class="badge bg-secondary">No</span>
                                {% endif %}
                            </td>
                            <td>{{ organization.createdAt|date('Y-m-d H:i') }}</td>
                            <td style="white-space: nowrap;">
                                <form method="post" action="{{ path('app_organization_delete', {'id': organization.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this organization?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ organization.id) }}">
                                    <button class="btn btn-sm btn-danger">delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">No organizations match your search.</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
                
                {# Pagination #}
                <div class="d-flex justify-content-center mt-3">
                    {{ knp_pagination_render(pagination) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
