{% extends 'back/base.html.twig' %}

{% block title %}Organizations management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">Organizations</h1>
            <p class="np-section-subtitle">Review and manage all organizations in the platform.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                {# Search Form #}
                <div class="np-card mb-4">
                    <div class="np-card__body">
                        <form method="get" class="row g-3">
                            <div class="col-md-8">
                                <input type="text" name="search" class="form-control" placeholder="Search organization name..." value="{{ app.request.query.get('search') }}">
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary w-100">Search</button>
                            </div>
                        </form>
                    </div>
                </div>

                <h2 class="np-section-title mb-3">Organizations list</h2>
                <div class="np-card p-0 overflow-hidden">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th class="px-4 py-3" style="width: 80px;">
                                        <a href="{{ path('app_organization_back', {'sort': 'id', 'direction': sort == 'id' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                            <span>#</span>
                                            {% if sort == 'id' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                        </a>
                                    </th>
                                    <th class="px-4 py-3">
                                        <a href="{{ path('app_organization_back', {'sort': 'name', 'direction': sort == 'name' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                            <span>Name</span>
                                            {% if sort == 'name' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                        </a>
                                    </th>
                                    <th class="px-4 py-3">Owner</th>
                                    <th class="px-4 py-3">
                                        <a href="{{ path('app_organization_back', {'sort': 'isValidated', 'direction': sort == 'isValidated' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                            <span>Status</span>
                                            {% if sort == 'isValidated' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                        </a>
                                    </th>
                                    <th class="px-4 py-3">
                                        <a href="{{ path('app_organization_back', {'sort': 'createdAt', 'direction': sort == 'createdAt' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                            <span>Created</span>
                                            {% if sort == 'createdAt' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                        </a>
                                    </th>
                                    <th class="px-4 py-3 text-end" style="width: 150px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for organization in pagination %}
                                <tr class="align-middle">
                                    <td class="px-4 fw-semibold text-muted">{{ organization.id }}</td>
                                    <td class="px-4">
                                        <div class="d-flex align-items-center gap-2">
                                            <i class="bi bi-building text-primary"></i>
                                            <span class="fw-medium">{{ organization.name }}</span>
                                        </div>
                                    </td>
                                    <td class="px-4">
                                        {% if organization.owner %}
                                            <div class="d-flex align-items-center gap-2">
                                                <div class="np-avatar-sm" style="width: 28px; height: 28px; background: linear-gradient(135deg, #8b5cf6, #6366f1); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 0.65rem; font-weight: 600;">
                                                    {{ organization.owner.username|slice(0, 2)|upper }}
                                                </div>
                                                <span class="text-muted">{{ organization.owner.username }}</span>
                                            </div>
                                        {% else %}
                                            <span class="text-muted">-</span>
                                        {% endif %}
                                    </td>
                                    <td class="px-4">
                                        <span class="badge bg-{{ organization.isValidated ? 'success' : 'warning' }}">
                                            <i class="bi bi-{{ organization.isValidated ? 'check-circle' : 'clock' }} me-1"></i>{{ organization.isValidated ? 'Validated' : 'Pending' }}
                                        </span>
                                    </td>
                                    <td class="px-4 text-muted">{{ organization.createdAt|date('M d, Y') }}</td>
                                    <td class="px-4 text-end">
                                        <div class="d-flex gap-2 justify-content-end">
                                            <a href="{{ path('app_organization_back', {'id': organization.id}) }}" class="btn btn-sm btn-primary d-flex align-items-center gap-1" title="Edit"><i class="bi bi-pencil-square"></i><span>Edit</span></a>
                                            <form method="post" action="{{ path('app_organization_delete', {'id': organization.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this organization?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ organization.id) }}">
                                                <button class="btn btn-sm btn-danger d-flex align-items-center gap-1" title="Delete"><i class="bi bi-trash"></i><span>Delete</span></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center py-5 text-muted">
                                        <i class="bi bi-building display-4 mb-3 d-block"></i>
                                        <p class="mb-0">No organizations found matching your criteria.</p>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    {# Pagination #}
                    <div class="d-flex justify-content-center mt-3">
                        {{ knp_pagination_render(pagination, null, {}, {'sortable': false}) }}
                    </div>
                </div>
            </div>

            <div class="np-back-layout-side">
                <div class="np-form-card np-animate-in-delayed">
                    <h2 class="np-section-title">
                        {% if editing %}
                            Edit organization #{{ currentOrganization.id }}
                        {% else %}
                            Create new organization
                        {% endif %}
                    </h2>

                    {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                        {{ form_row(form.name) }}
                        {{ form_row(form.description) }}
                        {{ form_row(form.logo) }}
                        {{ form_row(form.isValidated) }}
                        <button class="btn btn-success">{% if editing %}Update{% else %}Save{% endif %}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

