{% extends 'base_organization.html.twig' %}

{% block title %}Organization Dashboard{% endblock %}
{% block body %}
    <section class="np-section np-animate-in">
        <div class="np-section-header d-flex justify-content-between align-items-center">
            <div>
                <span class="np-section-kicker">Back office</span>
                {% set currentView = view|default('dashboard') %}
                {% if currentView == 'teams' %}
                    <h1 class="np-section-title">Teams</h1>
                    <p class="np-section-subtitle">Browse your teams and other organizations' teams.</p>
                {% elseif currentView == 'players' %}
                    <h1 class="np-section-title">Players</h1>
                    <p class="np-section-subtitle">Browse PRO players and recruit them to your teams.</p>
                {% elseif currentView == 'profile' %}
                    <h1 class="np-section-title">Organization profile</h1>
                    <p class="np-section-subtitle">Edit your organization and create new teams.</p>
                {% else %}
                    <h1 class="np-section-title">Organization Dashboard</h1>
                    <p class="np-section-subtitle">Statistics overview of your organization.</p>
                {% endif %}
            </div>
        </div>

        {% if not hasOrganization %}
            {# Show organization creation form #}
            <div class="np-back-layout">
                <div class="np-back-layout-main">
                    <div class="np-form-card np-animate-in-delayed">
                        <h2 class="np-section-title">Create Your Organization</h2>
                        <p>You need to create an organization before you can create teams and recruit players.</p>
                        {{ form_start(orgForm, {'attr': {'class': 'np-form', 'enctype': 'multipart/form-data'}}) }}
                            {{ form_widget(orgForm) }}
                            <button class="btn btn-success">Create Organization</button>
                        {{ form_end(orgForm) }}
                    </div>
                </div>
            </div>
        {% else %}
            {# Organization exists - show full dashboard or section pages #}

            {# Stats for organization & players (dashboard only) #}
            {% set teamCount = organizationTeams|length %}
            {% set totalTeamPlayers = 0 %}
            {% for t in organizationTeams %}
                {% set totalTeamPlayers = totalTeamPlayers + t.players|length %}
            {% endfor %}

            {% set availableProPlayers = 0 %}
            {% for p in players %}
                {% if p.team is null %}
                    {% set availableProPlayers = availableProPlayers + 1 %}
                {% endif %}
            {% endfor %}

            {% if currentView == 'dashboard' %}
            {# Analytics Stats Row #}
            <div class="row mb-4">
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="np-stat-card np-stat-card--primary">
                        <div class="np-stat-card__label">Total Teams</div>
                        <div class="np-stat-card__value">{{ teamCount }}</div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="np-stat-card np-stat-card--green">
                        <div class="np-stat-card__label">Total Players</div>
                        <div class="np-stat-card__value">{{ totalTeamPlayers }}</div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="np-stat-card np-stat-card--cyan">
                        <div class="np-stat-card__label">PRO Players</div>
                        <div class="np-stat-card__value">{{ players|filter(p => p.isPro)|length }}</div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="np-stat-card np-stat-card--amber">
                        <div class="np-stat-card__label">Available Pros</div>
                        <div class="np-stat-card__value">{{ availableProPlayers }}</div>
                    </div>
                </div>
            </div>

            {# Detailed Analytics Cards #}
            <div class="row mb-4">
                <div class="col-md-6 mb-3">
                    <div class="np-card">
                        <div class="np-card__header">
                            <h3 class="np-card__title">Team Distribution</h3>
                        </div>
                        <div class="np-card__body">
                            <div class="table-responsive">
                                <table class="leaderboard-table">
                                    <thead>
                                        <tr>
                                            <th>Team</th>
                                            <th>Players</th>
                                            <th>Game</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for team in organizationTeams %}
                                            <tr>
                                                <td class="font-weight-semibold">{{ team.name }}</td>
                                                <td>
                                                    <span class="np-badge np-badge--secondary">{{ team.players|length }} players</span>
                                                </td>
                                                <td class="text-muted">{{ team.game ? team.game.name : 'N/A' }}</td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="3" class="text-center text-muted">No teams created yet</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <div class="np-card">
                        <div class="np-card__header">
                            <h3 class="np-card__title">Player Rankings</h3>
                        </div>
                        <div class="np-card__body">
                            <div class="table-responsive">
                                <table class="leaderboard-table">
                                    <thead>
                                        <tr>
                                            <th>Player</th>
                                            <th>Rank</th>
                                            <th>Score</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for team in organizationTeams %}
                                            {% for player in team.players|sort((a, b) => b.score <=> a.score)|slice(0, 5) %}
                                                <tr>
                                                    <td class="font-weight-semibold">{{ player.nickname }}</td>
                                                    <td>
                                                        <span class="tier-badge tier-badge--{{ player.getRank()|lower }}">{{ player.getRank() }}</span>
                                                    </td>
                                                    <td class="text-muted">{{ player.score }}</td>
                                                </tr>
                                            {% endfor %}
                                        {% else %}
                                            <tr>
                                                <td colspan="3" class="text-center text-muted">No players in teams yet</td>
                                            </tr>
                                        {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Performance Overview #}
            <div class="np-card mb-4">
                <div class="np-card__header">
                    <h3 class="np-card__title">Organization Performance Overview</h3>
                </div>
                <div class="np-card__body">
                    <div class="row">
                        <div class="col-md-4 text-center mb-3">
                            <div style="font-size: 3rem; font-weight: 800; color: #6366f1;">{{ totalTeamPlayers > 0 ? (players|filter(p => p.isPro)|length / totalTeamPlayers * 100)|round : 0 }}%</div>
                            <div class="text-muted">PRO Player Ratio</div>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div style="font-size: 3rem; font-weight: 800; color: #34d399;">
                                {% set totalScore = 0 %}
                                {% for team in organizationTeams %}
                                    {% for player in team.players %}
                                        {% set totalScore = totalScore + player.score %}
                                    {% endfor %}
                                {% endfor %}
                                {{ totalTeamPlayers > 0 ? (totalScore / totalTeamPlayers)|round : 0 }}
                            </div>
                            <div class="text-muted">Avg Player Score</div>
                        </div>
                        <div class="col-md-4 text-center mb-3">
                            <div style="font-size: 3rem; font-weight: 800; color: #f59e0b;">{{ teamCount > 0 ? (totalTeamPlayers / teamCount)|round : 0 }}</div>
                            <div class="text-muted">Avg Players/Team</div>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}

            {% if currentView == 'dashboard' %}
                {# Dashboard must show statistics only #}

            {% elseif currentView == 'profile' %}
                <div class="np-back-layout">
                    <div class="np-back-layout-main">
                        <div class="np-form-card np-animate-in-delayed">
                            <h2 class="np-section-title">Organization profile</h2>
                            <div class="d-flex align-items-center mb-3" style="gap: 16px;">
                                {% if organization.logo %}
                                    <img src="{{ asset('uploads/logos/' ~ organization.logo) }}" alt="{{ organization.name }}" style="width:72px;height:72px;border-radius:12px;object-fit:cover;">
                                {% else %}
                                    <div style="width:72px;height:72px;border-radius:16px;background:#111827;display:flex;align-items:center;justify-content:center;font-size:1.6rem;">
                                        {{ organization.name|first|upper }}
                                    </div>
                                {% endif %}
                                <div>
                                    <div style="font-weight:600;">{{ organization.name }}</div>
                                    <div class="text-muted" style="font-size:0.85rem;">Owner: {{ app.user.username }}</div>
                                    <div class="text-muted" style="font-size:0.8rem;">{{ teamCount }} teams ‚Ä¢ {{ totalTeamPlayers }} players</div>
                                </div>
                            </div>

                            {{ form_start(orgForm, {'attr': {'class': 'np-form', 'enctype': 'multipart/form-data'}}) }}
                                {{ form_widget(orgForm) }}
                                <button class="btn btn-primary">Save organization</button>
                            {{ form_end(orgForm) }}
                        </div>
                    </div>

                    <div class="np-back-layout-side">
                        <div class="np-form-card np-animate-in-delayed mb-4">
                            <h3 class="np-section-title">Create new team</h3>
                            {% if teamForm %}
                                {{ form_start(teamForm, {'attr': {'class': 'np-form', 'enctype': 'multipart/form-data'}}) }}
                                    {{ form_widget(teamForm) }}
                                    <button class="btn btn-success">Create team</button>
                                {{ form_end(teamForm) }}
                            {% else %}
                                <p class="text-muted mb-0">Save your organization first, then you can create teams.</p>
                            {% endif %}
                        </div>

                        {% if organizationTeams|length > 0 %}
                        <div class="np-form-card np-animate-in-delayed">
                            <h3 class="np-section-title">My teams (summary)</h3>
                            <ul class="list-unstyled mb-0">
                                {% for team in organizationTeams %}
                                    <li class="d-flex justify-content-between align-items-center mb-2">
                                        <span>{{ team.name }}</span>
                                        <span class="badge bg-primary">{{ team.players|length }} players</span>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                        {% endif %}
                    </div>
                </div>

            {% elseif currentView == 'teams' %}
                <div class="np-form-card np-animate-in-delayed mb-4">
                    <h2 class="np-section-title">My Teams</h2>
                    {% if organizationTeams|length > 0 %}
                        <div class="np-card-grid" style="grid-template-columns: repeat(auto-fill, minmax(260px, 1fr)); gap: 1rem;">
                            {% for team in organizationTeams %}
                                <a href="{{ path('app_organization_team_detail', {'id': team.id}) }}" class="np-card" style="text-decoration: none; color: inherit;">
                                    <div class="d-flex align-items-center mb-2">
                                        {% if team.logo %}
                                            <img src="{{ asset('uploads/logos/' ~ team.logo) }}" alt="{{ team.name }}" style="width: 32px; height: 32px; border-radius: 8px; object-fit: cover; margin-right: 0.6rem;">
                                        {% endif %}
                                        <div>
                                            <div style="font-weight: 600;">{{ team.name }}</div>
                                            <div class="np-text-muted" style="font-size: 0.8rem;">{{ team.players|length }} players</div>
                                        </div>
                                    </div>

                                    {% if team.players|length > 0 %}
                                        <div class="d-flex flex-wrap" style="gap: 0.4rem;">
                                            {% for player in team.players %}
                                                <div class="d-flex align-items-center" style="background: rgba(15,23,42,0.9); border-radius: 999px; padding: 2px 8px; font-size: 0.75rem;">
                                                    {% if player.profilePicture %}
                                                        <img src="{{ asset('uploads/logos/' ~ player.profilePicture) }}" alt="{{ player.nickname }}" style="width: 18px; height: 18px; border-radius: 50%; object-fit: cover;">
                                                    {% endif %}
                                                    <span class="ms-1">{{ player.nickname }}</span>
                                                </div>
                                            {% endfor %}
                                        </div>
                                    {% else %}
                                        <p class="text-muted small mb-0">No players yet</p>
                                    {% endif %}
                                </a>
                            {% endfor %}
                        </div>
                    {% else %}
                        <p class="text-muted mb-0">No teams yet. Go to the profile page to create your first team.</p>
                    {% endif %}
                </div>

                {% if allTeams is defined and allTeams|length > 0 %}
                    <div class="np-form-card np-animate-in-delayed">
                        <h2 class="np-section-title">Teams from other organizations</h2>
                        <div class="np-card-grid" style="grid-template-columns: repeat(auto-fill, minmax(260px, 1fr)); gap: 1rem;">
                            {% for team in allTeams %}
                                {% if team.organization and team.organization.id != organization.id %}
                                    <div class="np-card">
                                        <div class="d-flex align-items-center mb-2">
                                            {% if team.logo %}
                                                <img src="{{ asset('uploads/logos/' ~ team.logo) }}" alt="{{ team.name }}" style="width: 28px; height: 28px; border-radius: 8px; object-fit: cover; margin-right: 0.6rem;">
                                            {% endif %}
                                            <div>
                                                <div style="font-weight: 600;">{{ team.name }}</div>
                                                <div class="np-text-muted" style="font-size: 0.8rem;">{{ team.organization.name }}</div>
                                            </div>
                                        </div>
                                        <div class="np-text-muted" style="font-size: 0.8rem;">
                                            {{ team.players|length }} players
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    </div>
                {% endif %}

            {% elseif currentView == 'players' %}
                <div class="np-form-card np-animate-in-delayed mb-3">
                    <h2 class="np-section-title">Available PRO players</h2>
                    <p class="np-section-subtitle mb-0">Select a team to recruit a PRO player.</p>
                </div>

                {% if players is empty %}
                    <div class="np-card">
                        <p class="text-muted mb-0">No PRO players available right now.</p>
                    </div>
                {% else %}
                    {% set hasAvailable = false %}
                    {% for p in players %}
                        {% if p.team is null %}
                            {% set hasAvailable = true %}
                        {% endif %}
                    {% endfor %}

                    {% if not hasAvailable %}
                        <div class="np-card">
                            <p class="text-muted mb-0">No available PRO players (all PRO players are already in teams).</p>
                        </div>
                    {% else %}
                        <div class="np-card-grid" style="grid-template-columns: repeat(auto-fill, minmax(320px, 1fr)); gap: 1.25rem;">
                            {% for player in players %}
                                {% if player.team is null %}
                                    <div class="np-card" style="position: relative; overflow: hidden; border-radius: 1rem; padding: 1.1rem;">
                                        <div style="position: absolute; inset: 0; opacity: 0.16; pointer-events: none; background: radial-gradient(circle at top left, rgba(56,189,248,0.4), transparent 55%);"></div>

                                        <div style="position: relative; display: flex; justify-content: space-between; align-items: flex-start; gap: 1rem;">
                                            <div style="display: flex; align-items: center; gap: 0.9rem;">
                                                {% if player.profilePicture %}
                                                    <img src="{{ asset('uploads/logos/' ~ player.profilePicture) }}" alt="{{ player.nickname }}" style="width: 52px; height: 52px; border-radius: 50%; object-fit: cover; box-shadow: 0 0 0 2px rgba(15,23,42,0.7);">
                                                {% else %}
                                                    <div style="width: 48px; height: 48px; border-radius: 50%; background: linear-gradient(135deg, #1f2937, #111827); display: flex; align-items: center; justify-content: center; font-size: 1.3rem; box-shadow: 0 0 0 2px rgba(15,23,42,0.7);">üéÆ</div>
                                                {% endif %}
                                                <div>
                                                    <div style="display: flex; align-items: center; gap: 0.4rem; margin-bottom: 0.1rem;">
                                                        <span style="font-weight: 600;">{{ player.nickname }}</span>
                                                        {% if player.isPro %}
                                                            <span class="badge bg-warning text-dark" style="font-size: 0.7rem; letter-spacing: 0.06em; text-transform: uppercase;">PRO</span>
                                                        {% endif %}
                                                    </div>
                                                    <div style="font-size: 0.8rem; opacity: 0.85;">
                                                        {{ player.realName|default('Unknown') }} ¬∑ {{ player.role|default('Role N/A') }}
                                                    </div>
                                                    <div style="font-size: 0.75rem; opacity: 0.7;">
                                                        {{ player.nationality|default('N/A') }} ¬∑ {{ player.game ? player.game.name : 'No game' }}
                                                    </div>
                                                </div>
                                            </div>

                                            <div style="text-align: right; font-size: 0.8rem;">
                                                <div style="font-size: 0.7rem; text-transform: uppercase; letter-spacing: 0.08em; opacity: 0.7;">Score</div>
                                                <div style="font-weight: 700; font-size: 1.2rem; line-height: 1;">{{ player.score }}</div>
                                                <div style="margin-top: 0.15rem; font-size: 0.7rem; opacity: 0.8;">Free agent</div>
                                            </div>
                                        </div>

                                        <div style="position: relative; margin-top: 0.75rem; display: flex; justify-content: space-between; align-items: center; font-size: 0.8rem;">
                                            <div style="opacity: 0.85;">
                                                Status:
                                                <span class="text-success">Available</span>
                                            </div>

                                            <div>
                                                {% if organizationTeams|length > 0 %}
                                                    <div class="dropdown">
                                                        <button class="btn btn-sm btn-success dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                            Select team
                                                        </button>
                                                        <ul class="dropdown-menu dropdown-menu-end">
                                                            {% for team in organizationTeams %}
                                                                <li>
                                                                    <form method="post" action="{{ path('app_organization_recruit', {'playerId': player.id, 'teamId': team.id}) }}" class="d-inline">
                                                                        <button type="submit" class="dropdown-item">
                                                                            {{ team.name }}
                                                                        </button>
                                                                    </form>
                                                                </li>
                                                            {% endfor %}
                                                        </ul>
                                                    </div>
                                                {% else %}
                                                    <span class="text-muted">Create a team first (Profile)</span>
                                                {% endif %}
                                            </div>
                                        </div>
                                    </div>
                                {% endif %}
                            {% endfor %}
                        </div>
                    {% endif %}
                {% endif %}
            {% elseif currentView == 'analytics' %}
                {# Global Analytics Section #}
                <div class="np-section-header">
                    <span class="np-section-kicker">Performance Analytics</span>
                    <h1 class="np-section-title">Global Analytics</h1>
                    <p class="np-section-subtitle">Deep insights into player and team performance across all organizations.</p>
                </div>

                {# Game Selector #}
                <div class="np-card mb-4">
                    <div style="padding: 1.5rem;">
                        <label style="display: block; font-size: 0.78rem; text-transform: uppercase; color: #64748b; margin-bottom: 0.5rem;">Select Game</label>
                        <select id="game-selector" class="form-select" style="width: 100%; max-width: 400px; background: #05070b; border: 1px solid rgba(255,255,255,0.1); color: #fff; padding: 0.75rem; border-radius: 10px;" onchange="window.location.href='{{ path('app_organization_back', {'view': 'analytics'}) }}&game=' + this.value">
                            {% for game in games %}
                                <option value="{{ game.id }}" {{ selectedGame and selectedGame.id == game.id ? 'selected' : '' }}>
                                    {{ game.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                {# Top Players Section #}
                <div class="row mb-4">
                    <div class="col-md-8">
                        <div class="np-card" style="padding: 0; overflow: hidden;">
                            <div style="padding: 1.5rem; border-bottom: 1px solid rgba(255,255,255,0.1);">
                                <h3 style="margin: 0; font-size: 1.2rem;">Top Players - {{ selectedGame ? selectedGame.name : 'Select a game' }}</h3>
                            </div>
                            {% if topPlayers|length > 0 %}
                                <table class="leaderboard-table">
                                    <thead>
                                        <tr>
                                            <th>Rank</th>
                                            <th>Player</th>
                                            <th>Win Rate</th>
                                            <th>Matches</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {% for stat in topPlayers %}
                                            {% set player = stat.player %}
                                            {% if player %}
                                            <tr>
                                                <td>
                                                    <span class="tier-badge tier-badge--{{ player.getRank()|lower }}">{{ loop.index }}</span>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center gap-2">
                                                        <div class="np-avatar np-avatar--sm" style="background: linear-gradient(135deg, #6366f1, #8b5cf6);">
                                                            {{ player.nickname|first|upper }}
                                                        </div>
                                                        <div>
                                                            <div style="font-weight: 600;">{{ player.nickname }}</div>
                                                            <div style="font-size: 0.8rem; color: #64748b;">Score: {{ player.score }}</div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span style="font-weight: 700; color: {% if stat.winRate >= 60 %}#10b981{% elseif stat.winRate >= 50 %}#eab308{% else %}#ef4444{% endif %}">
                                                        {{ stat.winRate }}%
                                                    </span>
                                                </td>
                                                <td>
                                                    <span style="color: #64748b;">{{ stat.matchesPlayed }}</span>
                                                </td>
                                                <td>
                                                    <a href="{{ path('app_organization_back', {'view': 'player-analytics', 'playerId': player.id}) }}" class="btn btn-sm btn-secondary">View</a>
                                                </td>
                                            </tr>
                                            {% endif %}
                                        {% endfor %}
                                    </tbody>
                                </table>
                            {% else %}
                                <div style="padding: 3rem; text-align: center;">
                                    <p style="color: #64748b;">No statistics available yet.</p>
                                </div>
                            {% endif %}
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="np-card">
                            <h3 style="margin-top: 0; font-size: 1.2rem; margin-bottom: 1.5rem;">Quick Stats</h3>
                            <div style="margin-bottom: 1.5rem;">
                                <div class="np-card-label">Total Players Ranked</div>
                                <div style="font-size: 2rem; font-weight: 700; color: #fff;">{{ topPlayers|length }}</div>
                            </div>
                        </div>
                    </div>
                </div>

            {% elseif currentView == 'leaderboards' %}
                {# Leaderboards Section #}
                <div class="np-section-header">
                    <span class="np-section-kicker">Rankings</span>
                    <h1 class="np-section-title">Global Leaderboards</h1>
                    <p class="np-section-subtitle">Top ranked players across all organizations.</p>
                </div>

                {# Game Selector #}
                <div class="np-card mb-4">
                    <div style="padding: 1.5rem;">
                        <label style="display: block; font-size: 0.78rem; text-transform: uppercase; color: #64748b; margin-bottom: 0.5rem;">Select Game</label>
                        <select id="game-selector" class="form-select" style="width: 100%; max-width: 400px; background: #05070b; border: 1px solid rgba(255,255,255,0.1); color: #fff; padding: 0.75rem; border-radius: 10px;" onchange="window.location.href='{{ path('app_organization_back', {'view': 'leaderboards'}) }}&game=' + this.value">
                            {% for game in games %}
                                <option value="{{ game.id }}" {{ selectedGame and selectedGame.id == game.id ? 'selected' : '' }}>
                                    {{ game.name }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>

                {# Leaderboard Table #}
                <div class="np-card mb-4" style="padding: 0; overflow: hidden;">
                    <div style="padding: 1.5rem; border-bottom: 1px solid rgba(255,255,255,0.1);">
                        <h3 style="margin: 0; font-size: 1.2rem;">Global Rankings - {{ selectedGame ? selectedGame.name : 'Select a game' }}</h3>
                    </div>
                    <div class="table-responsive">
                        <table class="leaderboard-table">
                            <thead>
                                <tr>
                                    <th style="width: 80px;">Rank</th>
                                    <th>Player</th>
                                    <th style="width: 150px;">Tier</th>
                                    <th style="width: 120px;">Score</th>
                                    <th style="width: 100px;">Win Rate</th>
                                    <th style="width: 100px;">Matches</th>
                                    <th style="width: 100px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entry in leaderboardRankings %}
                                    <tr>
                                        <td>
                                            <span class="tier-badge tier-badge--{{ entry.tier|lower }}">{{ entry.rank }}</span>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center gap-2">
                                                {% if entry.player.profilePicture %}
                                                    <img src="{{ asset('uploads/' ~ entry.player.profilePicture) }}" alt="{{ entry.player.nickname }}" class="np-avatar np-avatar--sm">
                                                {% else %}
                                                    <div class="np-avatar np-avatar--sm">{{ entry.player.nickname|first|upper }}</div>
                                                {% endif %}
                                                <div>
                                                    <div style="font-weight: 600;">{{ entry.player.nickname }}</div>
                                                    <div style="font-size: 0.8rem; color: #64748b;">{{ entry.player.game.name }}</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <span class="tier-badge tier-badge--{{ entry.tier|lower }}">{{ entry.tier }}</span>
                                        </td>
                                        <td>
                                            <span style="font-family: monospace; font-weight: 700; color: #fff;">{{ entry.eloRating }}</span>
                                        </td>
                                        <td>
                                            <span class="{% if entry.winRate >= 60 %}text-success{% elseif entry.winRate >= 50 %}text-warning{% else %}text-danger{% endif %} font-weight-semibold">
                                                {{ entry.winRate }}%
                                            </span>
                                        </td>
                                        <td>
                                            <span style="color: #64748b;">{{ entry.matches }}</span>
                                        </td>
                                        <td>
                                            <a href="{{ path('app_organization_back', {'view': 'player-analytics', 'playerId': entry.player.id}) }}" class="btn btn-sm btn-secondary">View</a>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7">
                                            <div class="np-empty-state py-4">
                                                <div class="np-empty-state__icon">üìä</div>
                                                <div class="np-empty-state__title">No Statistics Available</div>
                                                <p>Player stats will appear once matches are recorded.</p>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                {# Stats Summary #}
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <div class="np-stat-card np-stat-card--white">
                            <div class="np-stat-card__label">Total Players</div>
                            <div class="np-stat-card__value">{{ leaderboardRankings|length }}</div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="np-stat-card np-stat-card--cyan">
                            <div class="np-stat-card__label">Highest Score</div>
                            <div class="np-stat-card__value">{{ leaderboardRankings|first ? leaderboardRankings|first.eloRating : 'N/A' }}</div>
                        </div>
                    </div>
                    <div class="col-md-4 mb-3">
                        <div class="np-stat-card np-stat-card--purple">
                            <div class="np-stat-card__label">Avg Win Rate</div>
                            <div class="np-stat-card__value">
                                {% set totalWR = 0 %}
                                {% for entry in leaderboardRankings %}{% set totalWR = totalWR + entry.winRate %}{% endfor %}
                                {{ leaderboardRankings|length > 0 ? (totalWR / leaderboardRankings|length)|round(1) : 'N/A' }}%
                            </div>
                        </div>
                    </div>
                </div>

            {% elseif currentView == 'player-analytics' %}
                {# Player Analytics Section #}
                {% if viewPlayer %}
                    <div class="np-section-header d-flex justify-content-between align-items-start">
                        <div>
                            <span class="np-section-kicker">Player Profile</span>
                            <h1 class="np-section-title">{{ viewPlayer.nickname }}</h1>
                            <p class="np-section-subtitle">{{ viewPlayer.game.name }} ‚Ä¢ {{ viewPlayer.role|default('No Role') }}{% if viewPlayer.team %} ‚Ä¢ {{ viewPlayer.team.name }}{% endif %}</p>
                        </div>
                        <a href="{{ path('app_organization_back', {'view': 'leaderboards'}) }}" class="btn btn-secondary">‚Üê Back to Leaderboards</a>
                    </div>

                    {# Player Header Card #}
                    <div class="np-card mb-4">
                        <div class="np-card__body">
                            <div class="d-flex align-items-center gap-3">
                                {% if viewPlayer.profilePicture %}
                                    <img src="{{ asset('uploads/' ~ viewPlayer.profilePicture) }}" alt="{{ viewPlayer.nickname }}" class="np-avatar np-avatar--xl np-avatar--bordered">
                                {% else %}
                                    <div class="np-avatar np-avatar--xl np-avatar--bordered">{{ viewPlayer.nickname|first|upper }}</div>
                                {% endif %}
                                <div>
                                    <h2 class="m-0">{{ viewPlayer.nickname }}</h2>
                                    <div class="d-flex gap-2 mt-2">
                                        <span class="tier-badge tier-badge--{{ viewPlayer.getRank()|lower }}">{{ viewPlayer.getRank() }}</span>
                                        <span class="font-weight-bold" style="font-family: monospace; font-size: 1.2rem;">{{ viewPlayer.score }} ELO</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    {# Stats Overview #}
                    <div class="row mb-4">
                        <div class="col-md-2 col-6">
                            <div class="np-stat-card np-stat-card--white">
                                <div class="np-stat-card__label">Matches</div>
                                <div class="np-stat-card__value">{{ playerStat ? playerStat.matchesPlayed : 0 }}</div>
                            </div>
                        </div>
                        <div class="col-md-2 col-6">
                            <div class="np-stat-card np-stat-card--green">
                                <div class="np-stat-card__label">Wins</div>
                                <div class="np-stat-card__value">{{ playerStat ? playerStat.wins : 0 }}</div>
                            </div>
                        </div>
                        <div class="col-md-2 col-6">
                            <div class="np-stat-card np-stat-card--cyan">
                                <div class="np-stat-card__label">Win Rate</div>
                                <div class="np-stat-card__value">{{ playerStat ? playerStat.winRate : 0 }}%</div>
                            </div>
                        </div>
                        <div class="col-md-2 col-6">
                            <div class="np-stat-card np-stat-card--amber">
                                <div class="np-stat-card__label">K/D</div>
                                <div class="np-stat-card__value">
                                    {% if playerStat and playerStat.deaths > 0 %}{{ (playerStat.kills / playerStat.deaths)|number_format(2) }}{% else %}{{ playerStat ? playerStat.kills : 0 }}{% endif %}
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2 col-6">
                            <div class="np-stat-card np-stat-card--red">
                                <div class="np-stat-card__label">Kills</div>
                                <div class="np-stat-card__value">{{ playerStat ? playerStat.kills : 0 }}</div>
                            </div>
                        </div>
                        <div class="col-md-2 col-6">
                            <div class="np-stat-card np-stat-card--purple">
                                <div class="np-stat-card__label">KDA</div>
                                <div class="np-stat-card__value">
                                    {% if playerStat and playerStat.deaths > 0 %}{{ ((playerStat.kills + playerStat.assists) / playerStat.deaths)|number_format(2) }}{% else %}{{ playerStat ? (playerStat.kills + playerStat.assists) : 0 }}{% endif %}
                                </div>
                            </div>
                        </div>
                    </div>
                {% else %}
                    <div class="np-empty-state">
                        <div class="np-empty-state__icon">üë§</div>
                        <div class="np-empty-state__title">Player Not Found</div>
                        <p>The requested player could not be found.</p>
                        <a href="{{ path('app_organization_back', {'view': 'leaderboards'}) }}" class="btn btn-primary mt-3">Back to Leaderboards</a>
                    </div>
                {% endif %}

            {% endif %}

        {% endif %}
    </section>
{% endblock %}