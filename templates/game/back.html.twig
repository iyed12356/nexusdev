{% extends 'back/base.html.twig' %}

{% block title %}Game management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">Game management</h1>
            <p class="np-section-subtitle">Manage the list of games available on the platform.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                <h2>Games list</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Release year</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for game in games %}
                        <tr>
                            <td>{{ game.id }}</td>
                            <td>{{ game.name }}</td>
                            <td>{{ game.releaseYear }}</td>
                            <td style="white-space: nowrap;">
                                <a href="{{ path('app_game_back', {'id': game.id}) }}" class="btn btn-sm btn-primary">edit</a>
                                <form method="post" action="{{ path('app_game_delete', {'id': game.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this game?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game.id) }}">
                                    <button class="btn btn-sm btn-danger">delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no games found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="np-back-layout-side">
                <div class="np-form-card np-animate-in-delayed">
                    <h2 class="np-section-title">
                        {% if editing %}
                            Edit game #{{ currentGame.id }}
                        {% else %}
                            Create new game
                        {% endif %}
                    </h2>

                    {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-success">{% if editing %}Update{% else %}Save{% endif %}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
