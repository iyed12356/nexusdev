{% extends 'back/base.html.twig' %}

{% block title %}Game management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">Game management</h1>
            <p class="np-section-subtitle">Manage the list of games available on the platform.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                {# Search Form #}
                <div class="np-card mb-4">
                    <div class="np-card__body">
                        <form method="get" class="row g-3">
                            <div class="col-md-8">
                                <input type="text" name="search" class="form-control" placeholder="Search game name..." value="{{ app.request.query.get('search') }}">
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary w-100">Search</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="np-card np-card--stats mb-4">
                    <div class="np-card__header">
                        <h2 class="np-card__title">Games List</h2>
                    </div>
                    <div class="table-responsive">
                        <table class="leaderboard-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Release Year</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for game in pagination %}
                                <tr>
                                    <td><span class="font-monospace text-muted">#{{ game.id }}</span></td>
                                    <td class="font-weight-semibold">{{ game.name }}</td>
                                    <td class="text-muted">{{ game.releaseYear }}</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="{{ path('app_game_back', {'id': game.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                                            <form method="post" action="{{ path('app_game_delete', {'id': game.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this game?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ game.id) }}">
                                                <button class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">
                                        <div class="np-empty-state py-4">
                                            <div class="np-empty-state__icon">ðŸŽ®</div>
                                            <div class="np-empty-state__title">No Games Found</div>
                                            <p>No games match your search criteria.</p>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    {# Pagination #}
                    <div class="d-flex justify-content-center mt-3">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>

            <div class="np-back-layout-side">
                <div class="np-form-card np-animate-in-delayed">
                    <h2 class="np-section-title">
                        {% if editing %}
                            Edit game #{{ currentGame.id }}
                        {% else %}
                            Create new game
                        {% endif %}
                    </h2>

                    {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-success">{% if editing %}Update{% else %}Save{% endif %}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
