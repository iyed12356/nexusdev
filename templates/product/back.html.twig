{% extends 'back/base.html.twig' %}

{% block title %}Product management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">Product management</h1>
            <p class="np-section-subtitle">Manage shop items and virtual currencies.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                {# Search Form #}
                <div class="np-card mb-4">
                    <div class="np-card__body">
                        <form method="get" class="row g-3">
                            <div class="col-md-8">
                                <input type="text" name="search" class="form-control" placeholder="Search product name..." value="{{ app.request.query.get('search') }}">
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary w-100">Search</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="np-card np-card--stats mb-4">
                    <div class="np-card__header">
                        <h2 class="np-card__title">Products List</h2>
                    </div>
                    <div class="table-responsive">
                        <table class="leaderboard-table">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Type</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for product in pagination %}
                                <tr>
                                    <td><span class="font-monospace text-muted">#{{ product.id }}</span></td>
                                    <td>
                                        {% if product.imagePath %}
                                            <img src="{{ asset('uploads/products/' ~ product.imagePath) }}" alt="{{ product.name }}" class="rounded" style="width: 48px; height: 48px; object-fit: cover;">
                                        {% else %}
                                            <div class="np-avatar np-avatar--xs">ðŸ›’</div>
                                        {% endif %}
                                    </td>
                                    <td class="font-weight-semibold">{{ product.name }}</td>
                                    <td><span class="np-badge np-badge--secondary">{{ product.type }}</span></td>
                                    <td class="text-muted">{{ product.quantity }}</td>
                                    <td class="font-weight-semibold">{{ product.price|number_format(2, '.', ' ') }} â‚¬</td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="{{ path('app_product_back', {'id': product.id}) }}" class="btn btn-sm btn-primary">Edit</a>
                                            <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                                <button class="btn btn-sm btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="7">
                                        <div class="np-empty-state py-4">
                                            <div class="np-empty-state__icon">ðŸ›’</div>
                                            <div class="np-empty-state__title">No Products Found</div>
                                            <p>No products match your search criteria.</p>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    {# Pagination #}
                    <div class="d-flex justify-content-center mt-3">
                        {{ knp_pagination_render(pagination) }}
                    </div>
                </div>
            </div>

            <div class="np-back-layout-side">
                <div class="np-form-card np-animate-in-delayed">
                    <h2 class="np-section-title">
                        {% if editing %}
                            Edit product #{{ currentProduct.id }}
                        {% else %}
                            Create new product
                        {% endif %}
                    </h2>

                    {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                        {% if currentProduct.imagePath %}
                            <div class="mb-3">
                                <label class="form-label">Current image</label>
                                <div>
                                    <img src="{{ asset('uploads/products/' ~ currentProduct.imagePath) }}" alt="{{ currentProduct.name }}" style="max-width: 100%; border-radius: 8px;">
                                </div>
                            </div>
                        {% endif %}
                        {{ form_widget(form) }}
                        <button class="btn btn-success">
                            {% if editing %}Update{% else %}Save{% endif %}
                        </button>
                    {{ form_end(form) }}

                    {% if editing %}
                        <p class="np-form-footer">
                            <a href="{{ path('app_product_back') }}" class="btn btn-secondary">Cancel edit</a>
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
