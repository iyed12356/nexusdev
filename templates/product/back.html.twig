{% extends 'back/base.html.twig' %}

{% block title %}Product management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">Product management</h1>
            <p class="np-section-subtitle">Manage shop items and virtual currencies.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                <h2>Products list</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Image</th>
                            <th>Name</th>
                            <th>Type</th>
                            <th>Quantity</th>
                            <th>Price</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>{{ product.id }}</td>
                            <td>
                                {% if product.imagePath %}
                                    <img src="{{ asset('uploads/products/' ~ product.imagePath) }}" alt="{{ product.name }}" style="width: 48px; height: 48px; object-fit: cover; border-radius: 6px;">
                                {% else %}
                                    <span class="text-muted">—</span>
                                {% endif %}
                            </td>
                            <td>{{ product.name }}</td>
                            <td>{{ product.type }}</td>
                            <td>{{ product.quantity }}</td>
                            <td>{{ product.price|number_format(2, '.', ' ') }} €</td>
                            <td style="white-space: nowrap;">
                                <a href="{{ path('app_product_back', {'id': product.id}) }}" class="btn btn-sm btn-primary">edit</a>
                                <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                    <button class="btn btn-sm btn-danger">delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no products found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="np-back-layout-side">
                <div class="np-form-card np-animate-in-delayed">
                    <h2 class="np-section-title">
                        {% if editing %}
                            Edit product #{{ currentProduct.id }}
                        {% else %}
                            Create new product
                        {% endif %}
                    </h2>

                    {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                        {% if currentProduct.imagePath %}
                            <div class="mb-3">
                                <label class="form-label">Current image</label>
                                <div>
                                    <img src="{{ asset('uploads/products/' ~ currentProduct.imagePath) }}" alt="{{ currentProduct.name }}" style="max-width: 100%; border-radius: 8px;">
                                </div>
                            </div>
                        {% endif %}
                        {{ form_widget(form) }}
                        <button class="btn btn-success">
                            {% if editing %}Update{% else %}Save{% endif %}
                        </button>
                    {{ form_end(form) }}

                    {% if editing %}
                        <p class="np-form-footer">
                            <a href="{{ path('app_product_back') }}" class="btn btn-secondary">Cancel edit</a>
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
