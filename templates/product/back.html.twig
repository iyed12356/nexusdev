{% extends 'back/base.html.twig' %}

{% block title %}Product management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">Product management</h1>
            <p class="np-section-subtitle">Manage shop items and virtual currencies.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                {# Search Form #}
                <div class="np-card mb-4">
                    <div class="np-card__body">
                        <form method="get" class="row g-3">
                            <div class="col-md-8">
                                <input type="text" name="search" class="form-control" placeholder="Search product name..." value="{{ app.request.query.get('search') }}">
                            </div>
                            <div class="col-md-4">
                                <button type="submit" class="btn btn-primary w-100">Search</button>
                            </div>
                        </form>
                    </div>
                </div>

                <div class="np-card np-card--stats mb-4">
                    <div class="np-card__header">
                        <h2 class="np-section-title mb-3">Products list</h2>
                    </div>
                    <div class="np-card p-0 overflow-hidden">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th class="px-4 py-3" style="width: 80px;">
                                            <a href="{{ path('app_product_back', {'sort': 'id', 'direction': sort == 'id' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                                <span>#</span>
                                                {% if sort == 'id' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                            </a>
                                        </th>
                                        <th class="px-4 py-3" style="width: 60px;">Img</th>
                                        <th class="px-4 py-3">
                                            <a href="{{ path('app_product_back', {'sort': 'name', 'direction': sort == 'name' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                                <span>Name</span>
                                                {% if sort == 'name' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                            </a>
                                        </th>
                                        <th class="px-4 py-3">
                                            <a href="{{ path('app_product_back', {'sort': 'type', 'direction': sort == 'type' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                                <span>Type</span>
                                                {% if sort == 'type' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                            </a>
                                        </th>
                                        <th class="px-4 py-3">
                                            <a href="{{ path('app_product_back', {'sort': 'quantity', 'direction': sort == 'quantity' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                                <span>Qty</span>
                                                {% if sort == 'quantity' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                            </a>
                                        </th>
                                        <th class="px-4 py-3">
                                            <a href="{{ path('app_product_back', {'sort': 'price', 'direction': sort == 'price' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                                <span>Price</span>
                                                {% if sort == 'price' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                            </a>
                                        </th>
                                        <th class="px-4 py-3 text-end" style="width: 150px;">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for product in pagination %}
                                    <tr class="align-middle">
                                        <td class="px-4 fw-semibold text-muted">{{ product.id }}</td>
                                        <td class="px-4">
                                            {% if product.imagePath %}
                                                <img src="{{ asset('uploads/products/' ~ product.imagePath) }}" alt="{{ product.name }}" class="rounded" style="width: 40px; height: 40px; object-fit: cover;">
                                            {% else %}
                                                <div class="d-flex align-items-center justify-content-center rounded bg-secondary bg-opacity-20" style="width: 40px; height: 40px;">
                                                    <i class="bi bi-box text-muted"></i>
                                                </div>
                                            {% endif %}
                                        </td>
                                        <td class="px-4 fw-semibold">{{ product.name }}</td>
                                        <td class="px-4"><span class="badge bg-secondary">{{ product.type }}</span></td>
                                        <td class="px-4">
                                            <span class="badge bg-{{ product.quantity > 10 ? 'success' : (product.quantity > 0 ? 'warning' : 'danger') }}">
                                                {{ product.quantity }}
                                            </span>
                                        </td>
                                        <td class="px-4 fw-semibold">${{ product.price }}</td>
                                        <td class="px-4 text-end">
                                            <div class="d-flex gap-2 justify-content-end">
                                                <a href="{{ path('app_product_back', {'id': product.id}) }}" class="btn btn-sm btn-primary d-flex align-items-center gap-1" title="Edit"><i class="bi bi-pencil-square"></i><span>Edit</span></a>
                                                <form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this product?');">
                                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
                                                    <button class="btn btn-sm btn-danger d-flex align-items-center gap-1" title="Delete"><i class="bi bi-trash"></i><span>Delete</span></button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr>
                                        <td colspan="7" class="text-center py-5 text-muted">
                                            <i class="bi bi-box display-4 mb-3 d-block"></i>
                                            <p class="mb-0">No products found matching your criteria.</p>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                        
                        {# Pagination #}
                        <div class="d-flex justify-content-center mt-3">
                            {{ knp_pagination_render(pagination, null, {}, {'sortable': false}) }}
                        </div>
                    
                    {# Pagination #}
                    <div class="d-flex justify-content-center mt-3">
                        {{ knp_pagination_render(pagination, null, {}, {'sortable': false}) }}
                    </div>
                </div>
            </div>

            <div class="np-back-layout-side">
                <div class="np-form-card np-animate-in-delayed">
                    <h2 class="np-section-title">
                        {% if editing %}
                            Edit product #{{ currentProduct.id }}
                        {% else %}
                            Create new product
                        {% endif %}
                    </h2>

                    {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                        {% if currentProduct.imagePath %}
                            <div class="mb-3">
                                <label class="form-label">Current image</label>
                                <div>
                                    <img src="{{ asset('uploads/products/' ~ currentProduct.imagePath) }}" alt="{{ currentProduct.name }}" style="max-width: 100%; border-radius: 8px;">
                                </div>
                            </div>
                        {% endif %}
                        {{ form_widget(form) }}
                        <button class="btn btn-success">
                            {% if editing %}Update{% else %}Save{% endif %}
                        </button>
                    {{ form_end(form) }}

                    {% if editing %}
                        <p class="np-form-footer">
                            <a href="{{ path('app_product_back') }}" class="btn btn-secondary">Cancel edit</a>
                        </p>
                    {% endif %}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

