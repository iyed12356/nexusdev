{% extends 'back/base.html.twig' %}

{% block title %}Team management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">Team management</h1>
            <p class="np-section-subtitle">Manage teams associated with organizations and games.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                <h2>Teams list</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Game</th>
                            <th>Organization</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for team in teams %}
                        <tr>
                            <td>{{ team.id }}</td>
                            <td>{{ team.name }}</td>
                            <td>{{ team.game ? team.game.name : '' }}</td>
                            <td>{{ team.organization ? team.organization.name : '' }}</td>
                            <td style="white-space: nowrap;">
                                <a href="{{ path('app_team_back', {'id': team.id}) }}" class="btn btn-sm btn-primary">edit</a>
                                <form method="post" action="{{ path('app_team_delete', {'id': team.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this team?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ team.id) }}">
                                    <button class="btn btn-sm btn-danger">delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no teams found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="np-back-layout-side">
                <div class="np-form-card np-animate-in-delayed">
                    <h2 class="np-section-title">
                        {% if editing %}
                            Edit team #{{ currentTeam.id }}
                        {% else %}
                            Create new team
                        {% endif %}
                    </h2>

                    {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-success">{% if editing %}Update{% else %}Save{% endif %}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
