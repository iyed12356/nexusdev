{% extends 'base.html.twig' %}

{% block title %}Conversation with {{ conversation.otherParticipant(app.user).username }}{% endblock %}

{% block body %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <a href="{{ path('app_simple_messages') }}" class="btn btn-outline-primary">&larr; Back to Messages</a>
            <h1 class="np-section-title">
                {{ conversation.otherParticipant(app.user).username }}
            </h1>
        </div>

        {% for flash in app.flashes('success') %}
            <div class="alert alert-success">{{ flash }}</div>
        {% endfor %}

        {% for flash in app.flashes('error') %}
            <div class="alert alert-danger">{{ flash }}</div>
        {% endfor %}

        <div class="card">
            <div class="card-body" style="max-height: 500px; overflow-y: auto;">
                {% if messages is empty %}
                    <p class="text-muted text-center">No messages yet. Start the conversation!</p>
                {% else %}
                    {% for message in messages %}
                        <div class="mb-3 {% if message.sender == app.user %}text-end{% else %}text-start{% endif %}">
                            <div class="d-inline-block">
                                <strong>{{ message.sender.username }}</strong>
                                <div class="alert {% if message.sender == app.user %}alert-primary{% else %}alert-secondary{% endif %}" style="max-width: 400px; display: inline-block;">
                                    {{ message.content }}
                                </div>
                                <small class="text-muted">{{ message.createdAt|date('H:i') }}</small>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
            <div class="card-footer">
                <form method="post" action="{{ path('app_simple_message_conversation', {id: conversation.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('simple_message_send') }}">
                    <div class="input-group">
                        <textarea name="content" class="form-control" placeholder="Type your message..." rows="2" required></textarea>
                        <button type="submit" class="btn btn-primary">Send</button>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
