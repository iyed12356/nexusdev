{% extends 'back/base.html.twig' %}

{% block title %}User management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">User management</h1>
            <p class="np-section-subtitle">Manage all platform accounts, roles and access.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                
                {# Search and Filter Form #}
                <div class="np-card mb-4">
                    <div class="np-card__body">
                        <form method="get" class="row g-3">
                            <div class="col-md-4">
                                <input type="text" name="search" class="form-control" placeholder="Search username or email..." value="{{ app.request.query.get('search') }}">
                            </div>
                            <div class="col-md-3">
                                <select name="status" class="form-select">
                                    <option value="">All Status</option>
                                    <option value="ACTIVE" {% if app.request.query.get('status') == 'ACTIVE' %}selected{% endif %}>Active</option>
                                    <option value="BANNED" {% if app.request.query.get('status') == 'BANNED' %}selected{% endif %}>Banned</option>
                                </select>
                            </div>
                            <div class="col-md-3">
                                <select name="userType" class="form-select">
                                    <option value="">All Types</option>
                                    <option value="ADMIN" {% if app.request.query.get('userType') == 'ADMIN' %}selected{% endif %}>Admin</option>
                                    <option value="REGISTERED" {% if app.request.query.get('userType') == 'REGISTERED' %}selected{% endif %}>Registered</option>
                                    <option value="ORGANIZATION" {% if app.request.query.get('userType') == 'ORGANIZATION' %}selected{% endif %}>Organization</option>
                                </select>
                            </div>
                            <div class="col-md-2">
                                <button type="submit" class="btn btn-primary w-100">Filter</button>
                            </div>
                        </form>
                    </div>
                </div>
            
                <h2 class="np-section-title mb-3">Users list</h2>
                <div class="np-card p-0 overflow-hidden">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th class="px-4 py-3" style="width: 80px;">
                                        <a href="{{ path('app_user_back', {'sort': 'id', 'direction': sort == 'id' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search'), 'status': app.request.query.get('status'), 'userType': app.request.query.get('userType')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                            <span>#</span>
                                            {% if sort == 'id' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                        </a>
                                    </th>
                                    <th class="px-4 py-3">
                                        <a href="{{ path('app_user_back', {'sort': 'username', 'direction': sort == 'username' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search'), 'status': app.request.query.get('status'), 'userType': app.request.query.get('userType')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                            <span>Username</span>
                                            {% if sort == 'username' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                        </a>
                                    </th>
                                    <th class="px-4 py-3">
                                        <a href="{{ path('app_user_back', {'sort': 'email', 'direction': sort == 'email' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search'), 'status': app.request.query.get('status'), 'userType': app.request.query.get('userType')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                            <span>Email</span>
                                            {% if sort == 'email' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                        </a>
                                    </th>
                                    <th class="px-4 py-3">
                                        <a href="{{ path('app_user_back', {'sort': 'userType', 'direction': sort == 'userType' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search'), 'status': app.request.query.get('status'), 'userType': app.request.query.get('userType')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                            <span>Type</span>
                                            {% if sort == 'userType' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                        </a>
                                    </th>
                                    <th class="px-4 py-3">
                                        <a href="{{ path('app_user_back', {'sort': 'status', 'direction': sort == 'status' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search'), 'status': app.request.query.get('status'), 'userType': app.request.query.get('userType')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                            <span>Status</span>
                                            {% if sort == 'status' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                        </a>
                                    </th>
                                    <th class="px-4 py-3 text-end" style="width: 200px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for user in pagination %}
                                <tr class="align-middle {{ user.status == 'BANNED' ? 'table-danger' : '' }}">
                                    <td class="px-4 fw-semibold">{{ user.id }}</td>
                                    <td class="px-4">
                                        <div class="d-flex align-items-center gap-2">
                                            <div class="np-avatar-sm" style="width: 32px; height: 32px; background: linear-gradient(135deg, #10b981, #059669); border-radius: 50%; display: flex; align-items: center; justify-content: center; color: white; font-size: 0.75rem; font-weight: 600;">
                                                {{ user.username|slice(0, 2)|upper }}
                                            </div>
                                            <span class="fw-medium">{{ user.username }}</span>
                                        </div>
                                    </td>
                                    <td class="px-4 text-muted">{{ user.email }}</td>
                                    <td class="px-4">
                                        <span class="badge bg-{{ user.userType == 'ADMIN' ? 'danger' : (user.userType == 'ORGANIZATION' ? 'info' : 'secondary') }}">{{ user.userType }}</span>
                                    </td>
                                    <td class="px-4">
                                        <span class="badge bg-{{ user.status == 'ACTIVE' ? 'success' : 'danger' }}">
                                            <i class="bi bi-{{ user.status == 'ACTIVE' ? 'check-circle' : 'x-circle' }} me-1"></i>{{ user.status }}
                                        </span>
                                    </td>
                                    <td class="px-4 text-end">
                                        <div class="d-flex gap-2 justify-content-end">
                                            <a href="{{ path('app_user_back', {'id': user.id}) }}" class="btn btn-sm btn-primary d-flex align-items-center gap-1" title="Edit"><i class="bi bi-pencil-square"></i><span>Edit</span></a>
                                            <form method="post" action="{{ path('app_user_toggle_status', {'id': user.id}) }}" class="d-inline">
                                                <input type="hidden" name="_token" value="{{ csrf_token('toggle-status' ~ user.id) }}">
                                                <button class="btn btn-sm btn-{{ user.status == 'ACTIVE' ? 'warning' : 'success' }} d-flex align-items-center gap-1" title="{{ user.status == 'ACTIVE' ? 'Block' : 'Unblock' }}">
                                                    <i class="bi bi-{{ user.status == 'ACTIVE' ? 'lock' : 'unlock' }}"></i><span>{{ user.status == 'ACTIVE' ? 'Block' : 'Unblock' }}</span>
                                                </button>
                                            </form>
                                            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                                <button class="btn btn-sm btn-danger d-flex align-items-center gap-1" title="Delete"><i class="bi bi-trash"></i><span>Delete</span></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center py-5 text-muted">
                                        <i class="bi bi-inbox display-4 mb-3 d-block"></i>
                                        <p class="mb-0">No users found matching your criteria.</p>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                
                {# Pagination #}
                <div class="d-flex justify-content-center mt-4">
                    {{ knp_pagination_render(pagination, null, {}, {'sortable': false}) }}
                </div>
            </div>

            <div class="np-back-layout-side">
            <div class="np-form-card np-animate-in-delayed">
                <h2 class="np-section-title">
                    {% if editing %}
                        Edit user #{{ currentUser.id }}
                    {% else %}
                        Create new user
                    {% endif %}
                </h2>

                {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-success">{% if editing %}Update{% else %}Save{% endif %}</button>
                {{ form_end(form) }}

                    {% if editing %}
                        <p class="np-form-footer">
                            <a href="{{ path('app_user_back') }}" class="btn btn-secondary">Cancel edit</a>
                        </p>
                    {% endif %}
            </div>
            </div>
        </div>
    </section>
{% endblock %}

