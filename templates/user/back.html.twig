{% extends 'back/base.html.twig' %}

{% block title %}User management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">User management</h1>
            <p class="np-section-subtitle">Manage all platform accounts, roles and access.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
            <h2>Users list</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>User type</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.username }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.userType }}</td>
                        <td>{{ user.status }}</td>
                        <td style="white-space: nowrap;">
                            <a href="{{ path('app_user_back', {'id': user.id}) }}" class="btn btn-sm btn-primary">edit</a>
                            <form method="post" action="{{ path('app_user_delete', {'id': user.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this user?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                                <button class="btn btn-sm btn-danger">delete</button>
                            </form>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">no users found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
            </div>

            <div class="np-back-layout-side">
            <div class="np-form-card np-animate-in-delayed">
                <h2 class="np-section-title">
                    {% if editing %}
                        Edit user #{{ currentUser.id }}
                    {% else %}
                        Create new user
                    {% endif %}
                </h2>

                {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                    {{ form_widget(form) }}
                    <button class="btn btn-success">{% if editing %}Update{% else %}Save{% endif %}</button>
                {{ form_end(form) }}

                    {% if editing %}
                        <p class="np-form-footer">
                            <a href="{{ path('app_user_back') }}" class="btn btn-secondary">Cancel edit</a>
                        </p>
                    {% endif %}
            </div>
            </div>
        </div>
    </section>
{% endblock %}
