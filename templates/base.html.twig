<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/nexusplay.css') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="np-page">
            <header class="np-header">
                <div class="np-header-inner">
                    <div class="np-logo">
                        <a href="{{ path('front_home') }}">NEXUS<span>PLAY</span></a>
                    </div>
                    <nav class="np-nav">
                        <a href="{{ path('front_home') }}">HOME</a>
                        <a href="{{ path('front_product_index') }}">SHOP</a>
                        <a href="{{ path('front_player_index') }}">PLAYERS</a>
                        <a href="{{ path('front_team_index') }}">TEAMS</a>
                        <a href="{{ path('front_organization_index') }}">ORGANIZATIONS</a>
                        <a href="{{ path('front_stream_index') }}">STREAMS</a>
                        <a href="{{ path('front_content_index') }}">CONTENT</a>
                        <a href="{{ path('front_forum_post_index') }}">FORUM</a>
                    </nav>
                    <div class="np-header-actions">
                        {% if app.user %}
                            <a href="{{ path('front_user_profile') }}" class="np-header-user" style="text-decoration:none;">{{ app.user.username }}</a>
                            {% if (not app.user.hasPlayer) and not is_granted('ROLE_ORGANIZATION') %}
                                <a href="{{ path('app_player_become') }}" class="btn btn-sm btn-success">Become Player</a>
                            {% endif %}

                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('back_home') }}" class="btn btn-sm btn-primary">Admin back</a>
                            {% elseif is_granted('ROLE_COACH') %}
                                <a href="{{ path('app_coach_back') }}" class="btn btn-sm btn-primary">Coach back</a>
                            {% elseif is_granted('ROLE_ORGANIZATION') %}
                                <a href="{{ path('app_organization_back') }}" class="btn btn-sm btn-primary">Org back</a>
                            {% endif %}

                            <a href="{{ path('app_logout') }}" class="np-link-muted">LOG OUT</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="np-link-muted">LOG IN</a>
                            <a href="{{ path('app_register') }}" class="btn btn-sm btn-primary">SIGN UP</a>
                        {% endif %}
                    </div>
                </div>
            </header>

            <main class="np-main">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="np-flash np-flash-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </main>

            <footer class="np-footer">
                <div class="np-footer-inner">
                    <span>© {{ "now"|date("Y") }} NexusPlay. All rights reserved.</span>
                    <span>Esport analytics • Coaching • Community • Virtual shop</span>
                </div>
            </footer>
        </div>
    </body>
</html>
