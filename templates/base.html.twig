<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>‚ö´Ô∏è</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="{{ asset('css/nexusplay.css') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
        <div class="np-page">
            <header class="np-header">
                <div class="np-header-inner">
                    <div class="np-logo">
                        <a href="{{ path('front_home') }}">NEXUS<span>PLAY</span></a>
                    </div>
                    <button class="np-menu-toggle" id="mobile-menu-toggle" aria-label="Toggle menu">
                        <span></span>
                        <span></span>
                        <span></span>
                    </button>
                    <nav class="np-nav" id="main-nav">
                        <a href="{{ path('front_home') }}">HOME</a>
                        <a href="{{ path('front_product_index') }}">SHOP</a>
                        <a href="{{ path('front_content_index') }}">GUIDES</a>
                        <a href="{{ path('front_forum_post_index') }}">FORUM</a>
                        {% if is_granted('ROLE_ORGANIZATION') %}
                            <a href="{{ path('app_organization_back') }}">ORGANIZATIONS</a>
                        {% else %}
                            <a href="{{ path('front_organization_index') }}">ORGANIZATIONS</a>
                        {% endif %}
                        <a href="{{ path('front_player_index') }}">PLAYERS</a>
                        <a href="{{ path('front_coach_index') }}">COACHES</a>
                        
                        <!-- Analytics Dropdown -->
                        <div class="np-nav__item">
                            <a href="{{ path('app_analytics_index') }}" style="display: flex; align-items: center;">
                                ANALYTICS
                                <span class="np-nav__chevron">‚ñº</span>
                            </a>
                            <div class="np-nav__dropdown">
                                {% if is_granted('ROLE_ORGANIZATION') %}
                                    <a href="{{ path('app_organization_back') }}" class="np-nav__dropdown-link">
                                        <span class="np-nav__dropdown-icon">üè¢</span>
                                        <span>Organization Analytics</span>
                                    </a>
                                {% endif %}
                                <a href="{{ path('app_analytics_index') }}" class="np-nav__dropdown-link">
                                    <span class="np-nav__dropdown-icon">üìä</span>
                                    <span>Global Analytics</span>
                                </a>
                                {% if app.user and app.user.hasPlayer and app.user.player %}
                                    <a href="{{ path('app_analytics_player', {'playerId': app.user.player.id}) }}" class="np-nav__dropdown-link">
                                        <span class="np-nav__dropdown-icon">üéÆ</span>
                                        <span>My Player Stats</span>
                                    </a>
                                {% endif %}
                                {% if is_granted('ROLE_COACH') %}
                                    <a href="{{ path('app_coach_back') }}" class="np-nav__dropdown-link">
                                        <span class="np-nav__dropdown-icon">üë®‚Äçüè´</span>
                                        <span>Coach Analytics</span>
                                    </a>
                                {% endif %}
                                <div class="np-nav__dropdown-divider"></div>
                                <a href="{{ path('app_leaderboard_index') }}" class="np-nav__dropdown-link">
                                    <span class="np-nav__dropdown-icon">üèÜ</span>
                                    <span>Leaderboards</span>
                                </a>
                            </div>
                        </div>
                        
                        <a href="{{ path('front_stream_index') }}">STREAMS</a>
                    </nav>
                    <div class="np-header-actions">
                        {% if app.user %}
                            <style>
                                .np-notification-bell:hover .np-notification-dropdown {
                                    display: block !important;
                                }
                            </style>
                            <script>
                                document.addEventListener('DOMContentLoaded', function() {
                                    const bell = document.querySelector('.np-notification-bell');
                                    const dropdown = document.querySelector('.np-notification-dropdown');
                                    
                                    if (bell && dropdown) {
                                        bell.addEventListener('click', function(e) {
                                            if (e.target.closest('a')) return;
                                            e.preventDefault();
                                            dropdown.style.display = dropdown.style.display === 'block' ? 'none' : 'block';
                                        });

                                        document.addEventListener('click', function(e) {
                                            if (!bell.contains(e.target)) {
                                                dropdown.style.display = 'none';
                                            }
                                        });
                                    }
                                });
                            </script>
                            {% set unreadCount = app.user.notifications|filter(n => not n.isRead)|length %}
                            <div class="np-notification-bell" style="position: relative; margin-right: 15px;">
                                <a href="{{ path('app_notifications') }}" style="text-decoration: none; color: inherit;">
                                    <span style="font-size: 1.2rem;">üîî</span>
                                    {% if unreadCount > 0 %}
                                        <span style="position: absolute; top: -5px; right: -5px; background: #ff4444; color: white; border-radius: 50%; width: 18px; height: 18px; font-size: 0.7rem; display: flex; align-items: center; justify-content: center;">{{ unreadCount }}</span>
                                    {% endif %}
                                </a>
                                {% if unreadCount > 0 %}
                                    <div class="np-notification-dropdown" style="position: absolute; top: 100%; right: 0; background: #1a1a2e; border: 1px solid #333; border-radius: 8px; min-width: 300px; max-width: 400px; z-index: 1000; display: none; padding: 10px;">
                                        <div style="border-bottom: 1px solid #333; padding-bottom: 8px; margin-bottom: 8px; font-weight: bold;">Notifications</div>
                                        {% for notification in app.user.notifications|filter(n => not n.isRead)|slice(0, 5) %}
                                            <div style="padding: 8px; border-bottom: 1px solid #222; font-size: 0.85rem;">
                                                {{ notification.message }}
                                                <div style="font-size: 0.7rem; color: #888; margin-top: 4px;">{{ notification.createdAt|date('M d, H:i') }}</div>
                                            </div>
                                        {% endfor %}
                                        <div style="text-align: center; padding-top: 8px;">
                                            <a href="{{ path('app_notifications') }}" style="font-size: 0.8rem; color: #ffc107;">View All</a>
                                        </div>
                                    </div>
                                {% endif %}
                            </div>
                            <a href="{{ path('front_user_profile') }}" class="np-header-user" style="text-decoration:none;">{{ app.user.username }}</a>
                            {% if (not app.user.hasPlayer) and not is_granted('ROLE_ORGANIZATION') %}
                                <a href="{{ path('app_player_become') }}" class="btn btn-sm btn-success">Become Player</a>
                            {% endif %}
                            {% if app.user.hasPlayer %}
                                <a href="{{ path('front_coaching_player_sessions') }}" class="btn btn-sm btn-secondary">My Coaching</a>
                            {% endif %}

                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('back_home') }}" class="btn btn-sm btn-primary">Admin back</a>
                            {% elseif is_granted('ROLE_COACH') %}
                                <a href="{{ path('app_coach_back') }}" class="btn btn-sm btn-primary">Coach back</a>
                            {% elseif is_granted('ROLE_ORGANIZATION') %}
                                <a href="{{ path('app_organization_back') }}" class="btn btn-sm btn-primary">Org back</a>
                            {% endif %}

                            <a href="{{ path('app_logout') }}" class="np-link-muted">LOG OUT</a>
                        {% else %}
                            <a href="{{ path('app_login') }}" class="np-link-muted">LOG IN</a>
                            <a href="{{ path('app_register') }}" class="btn btn-sm btn-primary">SIGN UP</a>
                        {% endif %}
                    </div>
                </div>
            </header>

            <main class="np-main">
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="np-flash np-flash-{{ label }}">
                            {{ message }}
                        </div>
                    {% endfor %}
                {% endfor %}

                {% block body %}{% endblock %}
            </main>

            <footer class="np-footer">
                <div class="np-footer-inner">
                    <span>¬© {{ "now"|date("Y") }} NexusPlay. All rights reserved.</span>
                    <span>Esport analytics ‚Ä¢ Coaching ‚Ä¢ Community ‚Ä¢ Virtual shop</span>
                </div>
            </footer>
        </div>

        <script>
            // Mobile menu toggle
            document.addEventListener('DOMContentLoaded', function() {
                const menuToggle = document.getElementById('mobile-menu-toggle');
                const mainNav = document.getElementById('main-nav');
                
                if (menuToggle && mainNav) {
                    menuToggle.addEventListener('click', function() {
                        menuToggle.classList.toggle('active');
                        mainNav.classList.toggle('active');
                    });
                    
                    // Close menu when clicking on a link
                    const navLinks = mainNav.querySelectorAll('a');
                    navLinks.forEach(function(link) {
                        link.addEventListener('click', function() {
                            menuToggle.classList.remove('active');
                            mainNav.classList.remove('active');
                        });
                    });
                }
            });
        </script>
    </body>
</html>

