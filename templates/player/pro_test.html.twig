{% extends 'base.html.twig' %}

{% block title %}Become PRO - {{ player.nickname }}{% endblock %}

{% block body %}
<div class="container" style="max-width: 700px; margin-top: 40px; margin-bottom: 40px;">
    <h1 class="mb-3">PRO Qualification Test</h1>
    <p class="text-muted">
        Answer a few questions about your level. You need more than <strong>100 points</strong> to become a PRO player.
    </p>

    {{ form_start(form) }}
        <div class="mb-3">
            {{ form_label(form.mechanics) }}
            {{ form_widget(form.mechanics, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.gameSense) }}
            {{ form_widget(form.gameSense, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(form.teamplay) }}
            {{ form_widget(form.teamplay, {'attr': {'class': 'form-control'}}) }}
        </div>

        <button type="submit" class="btn btn-primary">
            Submit Test
        </button>
        <a href="{{ path('app_player_dashboard', {'id': player.id}) }}" class="btn btn-link">
            Cancel
        </a>
    {{ form_end(form) }}
</div>
{% endblock %}
