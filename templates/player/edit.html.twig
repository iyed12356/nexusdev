{% extends 'base.html.twig' %}

{% block title %}Edit Player Profile - NexusPlay{% endblock %}

{% block body %}
<section class="np-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="np-card" style="padding: 2rem;">
                    <h1 class="np-section-title">✏️ Edit Profile</h1>
                    
                    {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.nickname) }}
                                {{ form_widget(form.nickname, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.realName) }}
                                {{ form_widget(form.realName, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.role) }}
                                {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6 mb-3">
                                {{ form_label(form.nationality) }}
                                {{ form_widget(form.nationality, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div style="margin-top: 2rem;">
                            <button type="submit" class="btn btn-primary">Save Changes</button>
                            <a href="{{ path('app_player_dashboard', {'id': player.id}) }}" class="btn btn-secondary">Cancel</a>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</section>
{% endblock %}

