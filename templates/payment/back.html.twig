{% extends 'back/base.html.twig' %}

{% block title %}Payment management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">Payments</h1>
            <p class="np-section-subtitle">Track and manage payments for orders.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                <h2>Payments list</h2>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Order</th>
                            <th>Status</th>
                            <th>Provider</th>
                            <th>Created at</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for payment in payments %}
                        <tr>
                            <td>{{ payment.id }}</td>
                            <td>{{ payment.order.id }}</td>
                            <td>{{ payment.status }}</td>
                            <td>{{ payment.provider }}</td>
                            <td>{{ payment.createdAt|date('Y-m-d H:i') }}</td>
                            <td style="white-space: nowrap;">
                                <a href="{{ path('app_payment_back', {'id': payment.id}) }}" class="btn btn-sm btn-primary">edit</a>
                                <form method="post" action="{{ path('app_payment_delete', {'id': payment.id}) }}" style="display:inline" onsubmit="return confirm('Are you sure you want to delete this payment?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ payment.id) }}">
                                    <button class="btn btn-sm btn-danger">delete</button>
                                </form>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="6">no payments found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>

            <div class="np-back-layout-side">
                <div class="np-form-card np-animate-in-delayed">
                    <h2 class="np-section-title">
                        {% if editing %}
                            Edit payment #{{ currentPayment.id }}
                        {% else %}
                            Create new payment
                        {% endif %}
                    </h2>

                    {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-success">{% if editing %}Update{% else %}Save{% endif %}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}
