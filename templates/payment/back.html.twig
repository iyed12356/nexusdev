{% extends 'back/base.html.twig' %}

{% block title %}Payment management{% endblock %}

{% block admin_content %}
    <section class="np-section np-animate-in">
        <div class="np-section-header">
            <span class="np-section-kicker">Back office</span>
            <h1 class="np-section-title">Payments</h1>
            <p class="np-section-subtitle">Track and manage payments for orders.</p>
        </div>

        <div class="np-back-layout">
            <div class="np-back-layout-main">
                <h2 class="np-section-title mb-3">Payments list</h2>
                <div class="np-card p-0 overflow-hidden">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-dark">
                                <tr>
                                    <th class="px-4 py-3" style="width: 80px;">
                                        <a href="{{ path('app_payment_back', {'sort': 'id', 'direction': sort == 'id' and direction == 'ASC' ? 'DESC' : 'ASC', 'search': app.request.query.get('search')}) }}" class="text-decoration-none text-white d-flex align-items-center gap-2">
                                            <span>#</span>
                                            {% if sort == 'id' %}<i class="bi bi-caret-{{ direction == 'ASC' ? 'up' : 'down' }}-fill"></i>{% endif %}
                                        </a>
                                    </th>
                                    <th class="px-4 py-3">Order</th>
                                    <th class="px-4 py-3">Status</th>
                                    <th class="px-4 py-3">Provider</th>
                                    <th class="px-4 py-3">Created</th>
                                    <th class="px-4 py-3 text-end" style="width: 150px;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for payment in pagination %}
                                <tr class="align-middle">
                                    <td class="px-4 fw-semibold text-muted">{{ payment.id }}</td>
                                    <td class="px-4">
                                        <a href="{{ path('app_order_back', {'id': payment.order.id}) }}" class="badge bg-info text-decoration-none">
                                            Order #{{ payment.order.id }}
                                        </a>
                                    </td>
                                    <td class="px-4">
                                        <span class="badge bg-{{ payment.status == 'COMPLETED' ? 'success' : (payment.status == 'PENDING' ? 'warning' : 'danger') }}">
                                            <i class="bi bi-{{ payment.status == 'COMPLETED' ? 'check-circle' : (payment.status == 'PENDING' ? 'clock' : 'x-circle') }} me-1"></i>{{ payment.status }}
                                        </span>
                                    </td>
                                    <td class="px-4">
                                        <span class="badge bg-secondary">{{ payment.provider }}</span>
                                    </td>
                                    <td class="px-4 text-muted">{{ payment.createdAt|date('M d, Y') }}</td>
                                    <td class="px-4 text-end">
                                        <div class="d-flex gap-2 justify-content-end">
                                            <a href="{{ path('app_payment_back', {'id': payment.id}) }}" class="btn btn-sm btn-primary d-flex align-items-center gap-1" title="Edit"><i class="bi bi-pencil-square"></i><span>Edit</span></a>
                                            <form method="post" action="{{ path('app_payment_delete', {'id': payment.id}) }}" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this payment?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ payment.id) }}">
                                                <button class="btn btn-sm btn-danger d-flex align-items-center gap-1" title="Delete"><i class="bi bi-trash"></i><span>Delete</span></button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6" class="text-center py-5 text-muted">
                                        <i class="bi bi-credit-card display-4 mb-3 d-block"></i>
                                        <p class="mb-0">No payments found.</p>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                    
                    {# Pagination #}
                    <div class="d-flex justify-content-center mt-3">
                        {{ knp_pagination_render(pagination, null, {}, {'sortable': false}) }}
                    </div>
                </div>
            </div>

            <div class="np-back-layout-side">
                <div class="np-form-card np-animate-in-delayed">
                    <h2 class="np-section-title">
                        {% if editing %}
                            Edit payment #{{ currentPayment.id }}
                        {% else %}
                            Create new payment
                        {% endif %}
                    </h2>

                    {{ form_start(form, {'attr': {'class': 'np-form'}}) }}
                        {{ form_widget(form) }}
                        <button class="btn btn-success">{% if editing %}Update{% else %}Save{% endif %}</button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </section>
{% endblock %}

